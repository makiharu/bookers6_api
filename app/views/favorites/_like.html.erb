  
<!-- if book.favorited_by?(current_user) %> <<!-ログインユーザーがいいねしているかしてないかを判断する-->
<% if book.favorited_by?(current_user) %>
  <% if current_user.favorites.find_by(book_id: book.id) %>
  <li>
    <%= link_to book_favorite_path(book.id), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= book.favorites.count %> いいね
    <% end %>
  </li>
  <% else %>
  <li>
    <%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= book.favorites.count %> いいね
    <% end %>
  </li>
  <% end %>
<% end %>


