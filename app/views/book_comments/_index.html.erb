
        <tbody>
          <% book_comments.each do |book_comment| %> 
	        
	        <tr id="comment-<%= book_comment.id %>">  <!--trタグにidをつけること！-->
	          <td>										<!--each文なので、book_commentに値が入れば、入るほど、繰り返される-->
	            <%= link_to user_path(book_comment.user), class: "user_#{book_comment.user.id}" do %>
	              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
	              <%= book_comment.user.name %>
	            <% end %>
	          </td>
	          <td><%= book_comment.content %></td>
	         <% if book_comment.user == current_user %>
	            <td><%= link_to 'Destroy', book_comment_path(book_comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
	          <% end %>
	        <% end %>       
        </tbody>

 

