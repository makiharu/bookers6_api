	<tbody>
		
	 	<% book_comments.each do |book_comment| %> <!-- コメント一覧 -->
 		<tr>
	        <tr><h4>コメント表示</h4></tr>
	        <tr>
	          <td>
	            <%= link_to user_path(book_comment.user), class: "user_#{book_comment.user.id}" do %>
	              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
	              <%= book_comment.user.name %>
	            <% end %>
	          </td>
	          <td><%= book_comment.content %></td>
	         <% if book_comment.user == current_user %>    <!--book_commentにするとエラーが起きる-->
	            <td><%= link_to 'Destroy', book_book_comments_path(book_comment.book_id), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
	          <% end %>
	    </tr>

     	<% end %>       
	</tbody>

